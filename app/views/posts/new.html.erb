<div class="gelande-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">新規募集</h1>
        <%= form_for @post do |f| %>
          <div class="form-group">
            <%= f.label :日付 %>
            <%= date_field :date, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :タイトル %>
            <%= f.text_field :title, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :本文 %>
            <%= f.text_area :text, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :どうやって行く？ %>
            <%= f.text_field :how, class: 'form-control' %>
          </div>

          <%= f.submit '作成する', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>