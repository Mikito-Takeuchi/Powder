<div class="gelande-index-wrapper">
  <div class="container">
    <% @gelandes.each do |gelande| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="gelande-index-single">
            <h2 class="gelande-information">
              <%= gelande.name %>
            </h2>
            <p class="gelande-information">
              住所：<%= gelande.address %><br>
              オープン日：<%= gelande.open_date %><br>
              クローズ日：<%= gelande.close_date %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>