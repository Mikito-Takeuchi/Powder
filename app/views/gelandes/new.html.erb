<div class="gelande-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">新規目的地作成</h1>
        <%= form_for @gelande do |f| %>
          <div class="form-group">
            <%= f.label :ゲレンデ名 %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :住所 %>
            <%= f.text_field :address, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :オープン日 %>
            <%= f.date_field :open_date, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :クローズ日 %>
            <%= f.date_field :close_date, class: 'form-control' %>
          </div>

          <%= f.submit '作成する', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>