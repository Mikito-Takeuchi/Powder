<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 profiles-new-container">
        <h1 class="text-center text-white">プロフィール登録</h1>
        <%= form_for @profile do |f| %>
        <div class="row">
          <div class="col-md-offset-3 col-md-3 form-group">
            <%= f.label :年齢, class: 'text-white' %>
            <%= f.number_field :age, class: 'form-control' %>
          </div>
          <div class="col-md-3 form-group">
            <%= f.label :性別, class:'text-white' %>
            <%= f.select :sex, [["",""], ["男性","男性"], ["女性","女性"]], {},   class: 'form-control' %>
          </div>
        </div>
          <div class="form-group">
            <%= f.label :職業, class: 'text-white' %>
            <%= f.text_field :job, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :都道府県, class: 'text-white' %>
            <%= f.text_field :address, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :自己紹介, class: 'text-white' %>
            <%= f.text_area :introduce, class: 'form-control' %>
          </div>

          <%= f.submit "登録", class: 'btn-block btn-white' %>
        <% end %>
        <div>
          <%= link_to 'ログアウト', logout_path, class: 'btn btn-block btn-white' %>
        </div>
      </div>
    </div>
  </div>
</div>
